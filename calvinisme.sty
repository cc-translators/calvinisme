% Set index
\newcommand{\chindex}{%
  % Restore normal chapters
  \let\chapter\oldchapter
  \titleformat{\chapter}%
    {\centering\chapstyle}{}{10pt}%
    {}%
    [\vspace{8mm}]
  \renewcommand*{\BRbooktitlestyle}[1]{\textbf{\emph{##1}}}
  \cleardoublepage
  \printindex
}

